<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="575.0" prefWidth="510.0" spacing="20.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.api.trabalhodegraduacao.controller.usuario.aluno.TGAlunoController">
    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
    </padding>

    <Label style="-fx-font-weight: bold;" text="Registro de Trabalho de Graduação (TG)">
        <font>
            <Font size="16.0" />
        </font>
    </Label>

    <VBox alignment="CENTER_LEFT" spacing="5.0">
        <Label text="Digite o Código do TG:" />

        <TextField fx:id="campoTG" prefHeight="398.0" prefWidth="450.0" promptText="Ex: TCC2025_001" />
    </VBox>

    <Button onAction="#salvarTG" prefWidth="200.0" text="Salvar TG em CSV" />

    <Label fx:id="labelFeedback" text="" textFill="#007bff">
        <font>
            <Font size="13.0" />
        </font>
    </Label>
</VBox>
